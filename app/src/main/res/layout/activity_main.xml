
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/welcome_res"
        android:id="@+id/text" />



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entrada"
        android:id="@+id/check_entrada"
        />

    <RadioGroup
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:id="@+id/rgroup_entrada"
        android:visibility="invisible"
       >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sopa"
            android:id="@+id/entrada1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arroz"
            android:id="@+id/entrada2" />
    </RadioGroup>



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plato_fuerte"
        android:id="@+id/check_plato" />

    <RadioGroup
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:id="@+id/rgroup_plato"
        android:visibility="invisible"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pechuga"
            android:id="@+id/plato1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bisteck"
            android:id="@+id/plato2" />
    </RadioGroup>



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bebida"
        android:id="@+id/check_bebidas" />

    <RadioGroup
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:id="@+id/rgroup_bebidas"
        android:visibility="invisible"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refresco"
            android:id="@+id/bebidas1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agua"
            android:id="@+id/bebidas2" />
    </RadioGroup>



    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@mipmap/ic_shopp"
        fab:fab_colorNormal="@color/accent_color"
        fab:fab_colorPressed="@color/accent_color"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp" />




</LinearLayout>
